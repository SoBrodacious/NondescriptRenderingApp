<Window x:Class="GraphicsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="{Binding Background.Color}">
        <DockPanel LastChildFill="false">
            <StackPanel Width="150" DockPanel.Dock="Top">
                <TextBlock Text="{Binding Person.Name, StringFormat=Welcome {0}}"/>
                <TextBox Text="{Binding Person.Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Submit"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" DockPanel.Dock="Bottom">
                <Button x:Name="redButton" Click="redButton_Click">Red Background</Button>
                <Button x:Name="blueButton" Click="blueButton_Click">Blue Background</Button>
                <Button x:Name="yellowButton" Click="yellowButton_Click">Yellow Background</Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
