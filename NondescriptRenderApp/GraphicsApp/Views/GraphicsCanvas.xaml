<UserControl x:Class="GraphicsApp.Views.GraphicsCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphicsApp.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <!-- Resources -->
    <UserControl.Resources>
        <DataTemplate x:Key="polygonTemplate">
            <Polygon
                Points="{Binding}"
                Stroke="{Binding}"
                Fill="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Key="ellipseTemplate">
            <Ellipse>
            </Ellipse>
        </DataTemplate>
    </UserControl.Resources>
    
    <!-- View -->
    <Grid>
        <Canvas x:Name="RenderCanvas" Background="White" Width="800" Height="600" >
            <ContentControl
                ContentTemplateSelector="{StaticResource }"
        </Canvas>
    </Grid>
</UserControl>
